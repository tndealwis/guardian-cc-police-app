doctype html
html(lang="en")
  head
    title Dashboard
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous")
    style.
      body {
        background: #212529;
      }
      
      img {
        width: 400px;
        height: 400px;
        border: 1px solid #fdfdfd;
        border-radius: 10px;
      }
  body.container-sm.p-5.text-white
    h1.mb-4 Report # #{report.id}
    div
      h4.mb-4 Description 
      p= report.description
    h4.mb-4 Images
    #images.d-flex.gap-4
    #witnesses.d-flex.flex-column.gap-4.my-4
      h4 Witnesses
      each person in report.personal_details
        div.card
          div.card-body
            div
              h5 Full Name
              p= person.first_name + ' ' + person.last_name
            div
              h5 Date of Birth
              p= person.date_of_birth
            div
              h5 Contact Number
              p= person.contact_number
            button.btn.btn-danger Remove
    a(href=`/add-witness/${report.id}` class="btn btn-primary my-5") Add Witness
    script.
      const images = !{JSON.stringify(report.images)}

      const imageContainer = document.getElementById('images');

      for (const image of images) {
        const img = document.createElement('img');

        img.src = 'http://localhost:2699/api/v1/reports/image/'+ image.image_path;

        imageContainer.appendChild(img);
      }
